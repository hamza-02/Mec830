#include <AccelStepper.h>

// Pin Definitions
const int dirPin = 9;        // Direction pin for the stepper motor
const int pulsePin = 8;      // Pulse pin for the stepper motor

// Stepper Motor Setup
AccelStepper stepper(AccelStepper::DRIVER, pulsePin, dirPin);

// Speed and Acceleration Settings
const float maxSpeed = 1500;       // Equivalent speed in steps per second
const float acceleration = 300;    // Acceleration in steps per second^2

void setup() {
  Serial.begin(9600);

  // Set up stepper motor settings
  stepper.setMaxSpeed(maxSpeed);       // Set the maximum speed
  stepper.setAcceleration(acceleration); // Set a moderate acceleration
  stepper.setSpeed(maxSpeed);          // Set a constant speed to move in one direction
}

void loop() {
  stepper.runSpeed();  // Run the motor at the constant speed
}
